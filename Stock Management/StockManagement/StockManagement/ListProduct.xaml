<Window x:Class="StockManagement.ListProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagement"
        mc:Ignorable="d"
        Title="ListProduct" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/background-images-10.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="ProductList" HorizontalAlignment="Center" Height="164" Margin="0,70,0,0" VerticalAlignment="Top" Width="482" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Content="Refresh" HorizontalAlignment="Center" Height="55" Margin="0,354,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontFamily="Arial" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
